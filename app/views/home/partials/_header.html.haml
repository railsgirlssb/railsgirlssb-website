%header.header{ id: i18n_link_id_for_anchor('home'), data: { magellan: { destination: 'home' } } }
  .row
    .large-12.columns
      .row
        .columns.large-4.medium-4.hide-for-small-only.header__logo
          = image_tag 'header-logo.png', alt: 'Logo'

        .columns.large-8.medium-8.small-12
          .header__content
            %h1
              = t('home.index.header')
              %br
              %small= t('home.index.sub_header')

            %p.header__text= t('home.index.content')

            .header__buttons
              %p.hide-for-small-only= sign_up_button
              %p.show-for-small-only= sign_up_button(small: true)
